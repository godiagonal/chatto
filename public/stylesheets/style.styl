/* Variables */

font-family = Helvetica, Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
title-font-family = 'Roboto'
button-color = #cc715c//#e2a67a
scroll-type = auto

/* Scrollbars */

@css {
  ::-webkit-scrollbar {
      width: 5px;
  }
  ::-webkit-scrollbar:horizontal {
      height: 5px;
  }
  ::-webkit-scrollbar-track {
      border-radius: 2px;
      -webkit-box-shadow: inset 0 0 4px rgba(0,0,0,0.3); 
  }
  ::-webkit-scrollbar-thumb {
      border-radius: 2px;
      background: #cc715c;
      //-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.2); 
  }
}


/* Elements */

html
  height 100%

body
  font 12px font-family
  height 100%
  margin 0
  padding 0

header
  text-align center

footer
  text-align center

h1
  font-family title-font-family
  font-size 24px
  margin-top 0

h2
  font-family title-font-family
  font-size 11px
  margin-top 10px


/* Classes */

.altColor
  color button-color

.timestamp
  font-style italic

.userName
  font-weight bold

.titleBox
  height 30px
  vertical-align bottom
  text-align bottom
  padding 10px

.error
  border 1px solid red

.css-table
  width 100%
  display table
  .row
    display table-row
    .cell
      display table-cell
      vertical-align top


/* Main container */

#main
  margin 0 auto
  padding-top 50px
  width 70%
  height 50%
  min-width 400px
  text-align left


/* Messages */

#messages
  height 100%
  min-height 220px

  #messagesInner
    height 92%
    margin 10px
    overflow-y scroll-type

    #messageList
      .row
        .cell
          padding-right 5px
          padding-top 5px
        .cell:nth-child(1)
          width 30px


/* Online users */

#users
  width 200px
  height 100%
  min-height 220px
  float right

  #usersInner
    height 92%
    margin 10px
    overflow-y scroll-type

    #userList
      list-style none
      margin 0
      padding 0
      //padding-left 5px
      padding-right 5px
      li
        margin-top 2px
        overflow hidden


/* Bottom bar */

#inputBar
  width 100%
  height 72px
  margin-top 50px
  /*background #fcfcfc
  border-radius 3px
  border 1px solid #ddd
  -webkit-box-shadow inset 0 0 5px 0 rgba(0,0,0,0.1)*/


  /* Message input */

  #input
    overflow hidden

    #inputInner
      margin 10px

      #inputMessage
        overflow hidden

        #txtMessage
          display block
          float left
          height 40px
          width 100%
          padding 5px
          border-radius 3px 0 0 3px
          border 1px solid #ddd
          border-right none
          background #fff
          -webkit-box-shadow inset 0 0 3px 0 rgba(0,0,0,0.2)
          resize none
          margin 0
          font-family font-family
          outline: none;

        #txtMessage:focus
          border-color button-color

      #inputButton
        float right
        width 60px

        #btnSend
          display block
          float left
          width 60px
          color #fff
          height 52px
          cursor pointer
          background button-color
          margin 0
          border-radius 0 3px 3px 0
          border none
          font-family title-font-family


  /* Alias */

  #alias
    width 200px
    float right

    #aliasInner
      margin 10px

      /* User name text and edit button */

      #showUserName
        display none

        #lblUserName
          display block
          float left
          line-height 22px
          max-width 150px
          overflow hidden

        #btnEditUserName
          display block
          float left
          width 20px
          height 20px
          cursor pointer
          margin 0
          margin-left 5px
          border-radius 3px
          background-color transparent
          background-image url('/images/edit.png')
          background-repeat no-repeat
          background-position center
          border none

      /* User name field and save button */

      #editUserName

        #txtUserName
          display block
          float left
          height 18px
          width 133px
          padding 4px
          border-radius 3px 0 0 3px
          border 1px solid #ddd
          border-right none
          background #fff
          -webkit-box-shadow inset 0 0 3px 0 rgba(0,0,0,0.2)
          outline: none;

        #txtUserName:focus
          border-color button-color

        #btnSaveUserName
          font-size 11px
          display block
          float left
          width 35px
          padding 5px
          color #fff
          height 28px
          cursor pointer
          background button-color
          margin 0
          border-radius 0 3px 3px 0
          border none
          font-family title-font-family

        #lblUserNameError
          display none
          float left
          color red
          margin-top 10px